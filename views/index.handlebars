<h1>EAT DA BURGER</h1>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers I dream of eating</h2>
      <ul>
        {{#each burgers}}
          {{#unless swallowed}}
            {{> burgers/burger-block swallow = false}}
          {{/unless}}
        {{/each}}
      </ul>


    </div>
    <div class="col-md-6">
      <h2>All the burger's I've had before...</h2>
      <ul>
        {{#each burgers}}
          {{#if swallowed}}
            {{> burgers/burger-block}}
          {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2>Dream of a burger</h2>
      <form class="create-form">
      
        <div class="form-group">
          <label for="burger">Burger idea:</label>
          <input type="text" id="burger" name="type">
        </div>
      
      
        <button type="submit">Desire burger</button>
      </form>
    </div>
  </div>
</div>







